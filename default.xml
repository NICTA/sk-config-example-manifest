fetch="../seL4"
/>

<remote name="here"
fetch="."
/>

<default revision="master"
remote="seL4"
/>


<project name="common-tool.git" path="tools/common"/>
<project name="kbuild-tool.git" path="tools/kbuild"/>
<project name="elfloader-tool.git" path="tools/elfloader"/>
